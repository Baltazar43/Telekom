<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Форма для выбора или ввода материала -->
    <AutoCompleteTextView
        android:id="@+id/material_auto_complete"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#2B3674"
        android:textSize="14dp"
        android:hint="Материал" />

    <!-- Форма для ввода количества -->
    <EditText
        android:id="@+id/quantity_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2B3674"
        android:textSize="14dp"
        android:hint="Кол-во" />

    <!-- Кнопка удаления материала -->
    <Button
        android:id="@+id/delete_material_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:background="@android:color/transparent"
        android:textColor="#EE5D50" />

</LinearLayout>
