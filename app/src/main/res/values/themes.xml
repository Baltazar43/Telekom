<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelekomApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item> <!-- Hide ActionBar -->
        <item name="windowNoTitle">true</item> <!-- Hide ActionBar -->
        <!-- Bottom Navigation colors -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>

        <item name="android:fontFamily">@font/fonts</item> <!-- Используем кастомный шрифт -->

    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/nav_bar_item_color</item>
        <item name="itemTextColor">@color/nav_bar_item_color</item>
        <item name="backgroundTint">@color/nav_bar_background</item>
    </style>


</resources>


